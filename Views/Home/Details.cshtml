@model Employee
 <div class="row justify-content-center m-3">
     <div class="col-sm-4">
         <div class="card ">
             <div class="card-header">
                 <h3>@Model.Name</h3>
             </div>
             <div class="card-body text-center">
                 <img class="card-img-top imgwdth" src="~/Images/userIcon.jpg" height="200px" asp-append-version="true" />
                 <h4>Employee ID: @Model.id</h4>
                 <h4>Email: @Model.Email</h4>
                 <h4>Department: @Model.Department</h4>
             </div>
         </div>
         <div class="card-footer text-center">
             <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1">Back</a>
             <a href="#" class="btn btn-primary m-1">Edit</a>
             <a href="#" class="btn btn-danger m-1">Delete</a>
         </div>
     </div>
 </div>