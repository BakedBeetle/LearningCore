@model IEnumerable<Employee>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Employee List";

}



<div class="card-deck">
    @foreach (var item in Model)
    {
        var photo = "~/Images/" + (item.photopath ?? "userIcon.jpg");
        <div class="card  m-3 ">
            <div class="card-header fixcardhdr">
                <h5>@item.Name</h5>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imgwdth" src=@photo asp-append-version="true" />
            </div>

            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Details" asp-route-id="@item.id" class="btn btn-primary m-1">View</a>
                <a asp-controller="Home" asp-action="edit" asp-route-id="@item.id" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>

    }
</div>
<link href="~/Css/Custom.css" rel="stylesheet" />
