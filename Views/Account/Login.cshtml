@model EMPMANA.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />

    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
</head>
<body>
    <div class="container ">
        <form method="post" asp-controller="Account" asp-action="login">
            <div class="clearfix m-3">
                <div class="col-sm-6 m-auto " style="top:200px">
                    <div class=" row form-group">
                        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Email" class="col-sm-10 form-control" />
                    </div>
                    <div class=" row form-group">
                        <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Password" class="col-sm-10 form-control" />
                    </div>
                    <div class="row form-group">
                        <button type="submit" class="btn btn-success" style="border-radius: 20px;width: 80%;margin-left:15%;">SIGN IN</button>
                    </div>
                    <div asp-validation-summary="All" class="text-danger">
                    </div>
                </div>
               
            </div>
        </form>
      
    </div>
</body>
</html>
